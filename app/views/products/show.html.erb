
<div class='row-fluid'>
	<div class="notice">
		<% if flash[:notice] %>
			<%= flash[:notice] %>
		<% end %>
	</div>
	<div class='span1'></div>
	<div class='span6'>
		<div id='imgtitle'>
			<h4><%= @product.title %></h4>
	  </div>
		<div id="bigImg"><%= image_tag @bigimg.image_url %></div>
		<div id='proinfo'>


			<pre>
	  		<%= @product.description %>
	  	</pre>
		</div>
	</div>
	<div class='span1'>

		<%= render 'microimage' %>

	</div>

	<div class='span3'>
		<h4>
			<%= @product.price %>
		</h4>
		<%= button_to '放到购物车', line_items_path(product_id: @product)%>
		<% if !current_user.nil? && current_user.admin? %>
			<%= link_to 'Edit', edit_product_path(@product) %> 
			<%= link_to 'Back', products_path %>
		<% end %>
	</div>
	<div class='span1'>
	</div>
</div>
<script>
	$('#imgList').on('click', '.microimage', function(){
		$('#bigImg').empty();
		$(this).clone().appendTo('#bigImg');
	});
</script>